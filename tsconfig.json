{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["src/types/*/**"],
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "tests"],
    "exclude": ["node_modules"]
}
